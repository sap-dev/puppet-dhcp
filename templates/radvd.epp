<%- | String           $interface,
      Array[String]    $subnet6,
      Optional[String] $dnsserver1,
      Optional[String] $dnsserver2,
| -%>
interface <%= $interface %> {
  AdvSendAdvert on;
  AdvLinkMTU 1312;
<% if $dnsserver1 { -%>
  RDNSS <%= $dnsserver1 %><%= if $dnsserver2 { " ${dnsserver2}" } else { '' } %> {};
<% } -%>
<% $subnet6.each | $value | { -%>
  prefix <%= ip_network($value, 0) %> {
	AdvPreferredLifetime 20;
	AdvValidLifetime 30;
  };
<% } -%>
};

